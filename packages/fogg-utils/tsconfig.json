{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "types": ["jest"]
  },
  "files": [
    "src/index.ts",
    "src/frontend/index.ts",
    "src/graphql/index.ts",
    "src/is/index.ts",
    "src/object/index.ts",
    "src/security/index.ts"
  ],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
