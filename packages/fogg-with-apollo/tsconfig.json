{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "target": "es6",
    "typeRoots": ["./node_modules/@types"],
    "jsx": "react",
    "skipLibCheck": true
  },
  "files": ["src/index.ts", "src/apollo.ts", "src/types.ts", "src/withApollo.tsx"],
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
